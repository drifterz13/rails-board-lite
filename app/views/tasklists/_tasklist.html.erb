<%= turbo_frame_tag dom_id(tasklist) do %>
  <div class="flex flex-col h-full gap-1">
    <%= render "tasklists/header", { tasklist: tasklist } %>
    <%= turbo_frame_tag dom_id(tasklist, :new_task) %>
    <%= turbo_frame_tag dom_id(tasklist, :tasks), data: { controller: "dnd", "tasklist-id": tasklist.id }, class: "h-full flex flex-col gap-1" do %>
      <% tasklist.tasks.each do |task| %>
        <%= render "tasks/task", { tasklist: tasklist, task: task } %>
      <% end %>
    <% end %>
  </div>
<% end %>
