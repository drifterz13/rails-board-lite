<%= form_with model: @room, class: "w-96 mx-auto shadow rounded p-8 form-control border-t-4 border-primary bg-base-100" do |f| %>
  <% if room.errors.any? %>
    <h2><%= pluralize(room.errors.count, "errors") %> prohibited this room from being saved.</h2>
    <% room.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <%= f.label :title, class: "label" %>
  <%= f.text_field :title, 
    placeholder: "Room name", 
    class: "input input-bordered w-full" 
  %>
  <%= f.submit nil, class: "btn btn-primary w-full mt-8" %>
  <%= link_to "cancel", @room, class: "capitalize mt-4 link text-center text-sm" %>
<% end %>
