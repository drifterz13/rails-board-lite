<div 
    hidden
    class="relative z-10" 
    aria-labelledby="app-modal" 
    role="dialog" 
    aria-modal="true"
    data-controller="modal" 
    data-action="turbo:frame-load->modal#open"
  >
  <div class="fixed inset-0 bg-neutral bg-opacity-75 transition-opacity"></div>
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-base-100 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg h-96">
        <div class="bg-base-100 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <div class="text-right">
            <button type="button" class="btn btn-sm btn-ghost btn-circle" data-action="click->modal#close">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
            </button>
          </div>
          <%= turbo_frame_tag :modal_content %>
        </div>
      </div>
    </div>
  </div>
</div>
